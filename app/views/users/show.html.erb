<h1 class="page-header text-center">Show User <%= @user.email %></h1>


<h2 class="page-header">Connected Services</h2>
<% @services.each do |service| %>
<div class="panel panel-default">
  <div class="panel-heading first-uppercase size-18"><b class=""><%= link_to service.provider , service %></b></div>
  <div class="panel-body">
    <b>Name: </b><%= service.name %> <br />
    <b>Uid: </b><%= service.uid %>
  </div>
</div>

<% end %>

<% if @services.empty? %>
<div class="alert alert-warning">No services connected yet</div>
<% end %>

<h2 class="page-header">Connect New Services</h2>
<div id="user_nav">
  <%= link_to "Connect Twitter", "/auth/twitter", class: "btn btn-info btn-lg"%>
</div>

<h2 class="page-header">Settings</h2>

<%= link_to 'Edit profile', edit_user_registration_path, class: "btn btn-warning" %> |
<%= link_to "Logout", destroy_user_session_path, method: :delete, :class => "btn btn-danger" %>
