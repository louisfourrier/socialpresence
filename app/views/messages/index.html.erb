<h1 class="page-header text-center"><%= link_to @service.full_name, @service %> : All the messages</h1>

<table class="table">
	<thead>
		<tr>
			<th>DateTime</th>
			<th>Sent ?</th>
			<th>Content</th>
			<th>Url</th>
			<th>Tags</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @messages.each do |message| %>
		<tr>
			<td><%= l message.created_at %></td>
			<td> <% if message.has_been_sent %> <span class="text text-success"><i class="fa fa-check-square"></i></span> <% else %> <span class="text text-danger"><i class="fa fa-close"></i></span> <% end %> </td>
			<td><%= message.content %></td>
			<td><%= message.url %></td>

			<td><%= message.tags %></td>
			<td><%= link_to 'Show', service_message_path(@service, message) %></td>
			<td><%= link_to 'Edit', edit_service_message_path(@service, message) %></td>
			<td><%= link_to 'Destroy', service_message_path(@service, message), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to 'New Message', new_service_message_path(@service), :class => "btn btn-success" %>