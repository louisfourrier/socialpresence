/* Sticky footer styles
-------------------------------------------------- */

@import 'colors';

@mixin color-transition($color) {
  &:hover {
    i{
       color: $color;
    }  
  }
}

.linkedin-bg{
    @include color-transition($linkedin);
}
.pinterest-bg{
    @include color-transition($pinterest);
}
.twitter-bg{
    @include color-transition($twitter);
}
.facebook-bg{
    @include color-transition($facebook);
}
.google-plus-bg{
    @include color-transition($google-plus);
}

.facebook-back{
  background-color: $facebook;
  &:hover {
    background-color: $facebook;
  }
}
.twitter-back{
  background-color: $twitter;
   &:hover {
     background-color: $twitter;
  }
}
.google-plus-back{
  background-color: $google-plus;
   &:hover {
     background-color: $google-plus;
  }
}

.no_underline{
  &:hover {
    text-decoration: none;
  }
}

.modify-btn{
  border-color:transparent !important;
}

.size-14{
	font-size: 14px;
}

.size-16{
	font-size: 16px;
}

.size-18{
	font-size: 18px;
}

.size-20{
	font-size: 20px;
}

.first-uppercase:first-letter{
    text-transform: capitalize;
}

/* change the path of icons for bootstrap */
@font-face {
  font-family: 'Glyphicons Halflings';
  src: url(<%= asset_path 'glyphicons-halflings-regular.eot' %>);
  src: url(<%= asset_path 'glyphicons-halflings-regular.eot?#iefix' %>) format('embedded-opentype'), 
       url(<%= asset_path 'glyphicons-halflings-regular.woff' %>) format('woff'), 
       url(<%= asset_path 'glyphicons-halflings-regular.ttf' %>) format('truetype'), 
       url(<%= asset_path 'glyphicons-halflings-regular.svg#glyphicons_halflingsregular' %>) format('svg');
}


html {
  position: relative;
  min-height: 100%;
}

body {
  height: 100%;
   margin-bottom: 60px;
}


.main-container{
  margin-top: 40px;
  height: 100%;
}
